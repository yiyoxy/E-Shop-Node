extends ../layout

block content
	.container
		.row
			.panel.panel-primary
				.panel-heading 
				.panel-body
					p 订单号: #{order._id}
					p 商品名称: #{order.goodname}
					p 单价: #{order.price}元
					p 数量: #{order.count}件
					p 总价: #{order.total}元
					p 联系人: #{order.linkman}
					p 联系电话: #{order.phone}
					p 送货地址: #{order.address}
					p 下单时间: #{moment(order.meta.updateAt).format('YYYY-MM-DD hh:mm:ss')}
					
